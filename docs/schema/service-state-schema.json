{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "datetime": {
        "type": "string",
        "format": "date-time"
      },
      "clientNotification": {
        "type": "object",
        "properties": {
          "level": {
            "type": "integer",
            "enum": [
              1,
              2,
              3
            ]
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "eventType": {
            "type": "string"
          },
          "snoozePeriod": {
            "type": "integer",
            "enum": [
              1,
              2,
              3
            ]
          },

          "helpText": {
            "type": "string"
          },
          "helpUrl": {
            "type": "string"
          },

          "actionText": {
            "type": "string"
          },
          "actionHandlerSdxId": {
            "type": "string"
          },
          "actionHandlerSdxParameters": {
            "type": "string"
          }
        },
        "required": [
          "level",
          "title",
          "description",
          "eventType",
          "snoozePeriod"
        ]
      }
    },
    "required": ["datetime"]
  }